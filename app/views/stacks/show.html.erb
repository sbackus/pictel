<%- model_class = Stack -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:finished) %>:</strong></dt>
  <dd><%= @stack.finished %></dd>
  <dt><strong><%= model_class.human_attribute_name(:max_size) %>:</strong></dt>
  <dd><%= @stack.max_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @stack.active %></dd>
  <% @stack.cards.each do |card| %>
    <% if card.type == "PictureCard" %>
      <%= image_tag(card.data_picture) %>
    <% else %>
      <%= card.data_text %>
    <% end %>
  <% end %> 


</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              stacks_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_stack_path(@stack), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stack_path(@stack),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
