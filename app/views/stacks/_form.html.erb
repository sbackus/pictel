<%= form_for @stack, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :finished, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :finished, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :max_size, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :max_size, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :active, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :active, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                stacks_path, :class => 'btn' %>
  </div>
<% end %>
